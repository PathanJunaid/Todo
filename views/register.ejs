<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Register</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/index.css">
</head>

<body>
  <!-- navbar Started  -->
  <nav class="navbar bg-body-navbar">
    <div class="container">
      <a class="navbar-brand text-white" href="/">
        <strong>Todos</strong>
      </a>
      <form class="d-flex">
        <a class="btn btn-color text-white text-decoration-none" href="/login">Login</a>
      </form>
    </div>
  </nav>
  <!-- navbar Ended  -->
      <div class="container py-5">
        <div class="form-card-width mx-auto my-3 text-white">
          <form action="/register" class="w-75 mx-auto bg-success px-4 py-5 rounded-3 linear-bg-color" method="post">
            <h2 class="mb-4">Sign Up</h2>
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="name" placeholder="name" name="name" required>
            </div>
            <div class="mb-3">
              <label for="Email" class="form-label">Email</label>
              <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Email" name="email"
                required>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="passowrd" placeholder="password" name="password" required
                minlength="7">
            </div>
            <div class="text-danger mt-3">
              <%=locals.newMsg%>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-color text-white">Register</button>
            </div>
          </form>

        </div>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>