<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Todos List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/index.css">
</head>

<body>

  <!-- navbar Started  -->
  <nav class="navbar bg-body-navbar">
    <div class="container">
      <a class="navbar-brand text-white" href="/">
        <strong>Todos</strong>
      </a>
      <form class="d-flex">
        <a class="btn btn-color text-white text-decoration-none" href="/">Add Todos</a>
        <a class="btn btn-color text-white text-decoration-none mx-2" href="/logout">Logout</a>
      </form>
    </div>
  </nav>
  <!-- navbar Ended  -->
  <div class="container my-5">
    <div class="row justify-content-center gy-4">
      <%if(data.length>0){ data.forEach(function(todo){%>
        <div class="col-lg-4 col-10">
          <div class="card my-4 linear-bg-color text-white">
            <div class="card-body">
              <h5 class="card-title">
                <%= todo.Heading %>
              </h5>
              <p class="card-text">
                <%= todo.About %>
              </p>
              <a href="/edit/<%=todo._id%>" class="btn btn-color">Edit</a>
              <a href="/Delete/<%=todo._id%>" class="btn btn-color">Delete</a>
            </div>
          </div>

        </div>
        <% })} else{%>
          <div class="text-center text-white fs-4">
            <strong>no todos found</strong>
          </div>
        <%}
        %>

    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>